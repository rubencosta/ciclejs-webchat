body
  height 100%

  #app
    height 100%

    a.mdl-navigation
      &:hover
        background-color rgb(224,224,224)
        color #757575

      &.active
        background-color #757575
        color rgb(250,250,250)

        &:hover
          background-color rgb(224,224,224)
          color #757575

    .chat-list
      &-item
        display flex
        flex-flow row wrap
        & > *
          flex 1 100%
      &-image
        flex 0 1 40px
        height 40px
        border-radius 50%
        background-position center
        background-size cover

      &-name
        margin-left 4px
        flex 2 0

      &-timestamp
        flex 2 0

      &-message
        padding-top 8px

    .chat-message-item
      margin 16px
      align-self flex-start
      display flex
      justify-content flex-start
      color #757575

      > *
        padding 4px

      &.reply-message
        justify-content: flex-end

        .chat-message-item-content
          background-color #757575
          color rgb(250, 250, 250)

    .chat-reply-box
      position absolute
      bottom 0
      width 100%
      height auto
      margin 24px 0 0 0

      input
        width 100%
        min-height 24px
        padding 4px